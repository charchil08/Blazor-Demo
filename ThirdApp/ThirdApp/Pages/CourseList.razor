@page "/course"
@inherits CourseListBase

<h3>CourseList</h3>


<div class="table-responsive">
    @if (Courses == null)
    {
        <div class="spinner" ></div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Created On</th>
                    <th>Modified On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Courses)
                {
                    <DisplayCourse Course="course" ></DisplayCourse>
                }
            </tbody>
        </table>
    }
</div>
